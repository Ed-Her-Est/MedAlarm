<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#2FA59E">

    <!-- CardView que contiene el nombre y la descripción del medicamento -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp">

        <!-- LinearLayout dentro del CardView para contener los TextViews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TextView para el nombre del medicamento -->
            <TextView
                android:id="@+id/textViewMedicamentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del medicamento"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"/>

            <!-- TextView para la descripción del medicamento -->
            <TextView
                android:id="@+id/textViewMedicamentDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del medicamento"
                android:textSize="14sp"
                android:textColor="#444444"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- ImageView para mostrar una imagen relacionada -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/whatsapp_image_2024_09_20_at_1_16_37_pm__1__removebg_preview" />
</LinearLayout>
